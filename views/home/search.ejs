  <script>
    let selengkapnya = document.querySelectorAll('.selengkapnya');
    let desc = document.querySelectorAll('.desc');
    selengkapnya.forEach((a, i) => {
      a.addEventListener('click', ()=>{
        desc[i].classList.remove('max-h-28')
        a.classList.add('hidden')
      })
    }) 
  
    document.addEventListener('DOMContentLoaded', () => {
      const contentContainer = document.getElementById('contentContainer');
      const seeMoreLink = document.getElementById('seeMoreLink');
  
      // Fungsi untuk memeriksa tinggi dan menyembunyikan tautan jika perlu
      function checkHeight() {
          const maxHeight = parseFloat(getComputedStyle(contentContainer).maxHeight);
          const currentHeight = contentContainer.scrollHeight;
  
          if (currentHeight < maxHeight) {
              seeMoreLink.style.display = 'none'; // Sembunyikan tautan
          } else {
              seeMoreLink.style.display = 'block'; // Tampilkan tautan
          }
      }
  
      // Memanggil fungsi untuk memeriksa tinggi saat halaman dimuat
      checkHeight();
  });
  
  </script>
  